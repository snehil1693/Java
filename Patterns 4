public class Patterns {
    public static void main(String[] args) {

        int n = 4;

        for (int i = n; i>=1; i--) {
            //inner loop
            for (int j = 1; j <= i; j++) {
                //outer  loop
                    System.out.print("*");
                }

            System.out.println();
        }
    }
}


